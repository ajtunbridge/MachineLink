<Window x:Class="MachineLink.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MachineLink.Host"
        mc:Ignorable="d"
        Background="White" 
        Title="Machine Link - Service Host" Height="500" Width="700">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Window.Resources>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Content="Start" Click="StartButton_OnClick"/>
        <Button Content="Stop" Click="StopButton_OnClick"/>
        <TextBlock Name="StatusText" Margin="5" FontSize="14" Text="Service is stopped" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
