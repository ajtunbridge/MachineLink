<Window x:Class="MachineLink.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MachineLink.DesktopClient"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="MainWindow" Height="700" Width="900">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Content="Download program" Padding="5" Margin="5" FontSize="14" Click="Button_Click"/>
        <TextBox x:Name="ReponseText" Padding="5" Margin="5" FontSize="14" IsReadOnly="True" Width="500" Height="300" VerticalScrollBarVisibility="Auto"/>
        <ProgressBar x:Name="Progress" Margin="5" Height="20" IsIndeterminate="True" Visibility="Hidden"/>
    </StackPanel>
</Window>
